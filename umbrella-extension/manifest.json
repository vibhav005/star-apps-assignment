{
  "manifest_version": 3,
  "name": "Custom Umbrella Preview Tool",
  "description": "Preview and customize umbrellas with your brand logo and colors.",
  "version": "1.0",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "assets/icon128.png"
    }
  },
  "icons": {
    "128": "assets/icon128.png"
  },
  "permissions": ["storage"],
  "host_permissions": ["<all_urls>"]
}
